<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".screens.cart.InfoCartActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_infocart"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#1E88E5"
        android:gravity="center"
        android:textSize="30dp"
        app:title="THÔNG TIN THANH TOÁN"
        app:titleTextColor="@color/white">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/tv_ttgh"
            android:textSize="25dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/namepayment"
            style="@style/parent">

            <EditText
                android:id="@+id/txtnguoinhan"
                style="@style/modifiedEditText"
                android:drawableLeft="@drawable/ic_baseline_fullname"
                android:drawablePadding="10dp"
                android:hint="Họ tên người nhận"
                android:inputType="textPersonName"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phonepayment"
            style="@style/parent">

            <EditText
                android:id="@+id/txtsdtnguoinhan"
                style="@style/modifiedEditText"
                android:drawableLeft="@drawable/ic_baseline_phone"
                android:drawablePadding="10dp"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addresspayment"
            style="@style/parent">

            <EditText
                android:id="@+id/txtdiachi"
                style="@style/modifiedEditText"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="10dp"
                android:hint="Gồm số nhà, xã, phường, thị trấn,..."
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btncheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn_bg_design"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:text="Đặt hàng"
            android:textColor="@color/whiteTextColor" />

    </LinearLayout>
</LinearLayout>